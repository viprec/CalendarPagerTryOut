<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval" android:bottom="0dp" android:top="2dp" android:left="2dp" android:right="2dp">
                    <solid android:color="@color/fab_color_shade"></solid>
                </shape>
            </item>
            <item>
                <shape android:shape="oval" android:bottom="2dp" android:top="2dp" android:left="2dp" android:right="2dp">
                    <solid android:color="@color/fab_color_primary"></solid>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <ripple xmlns:android="http://schemas.android.com/apk/res/android"
            android:color="@color/button_material_light">
            <item>
                <shape android:shape="oval" android:bottom="2dp" android:top="2dp" android:left="2dp" android:right="2dp">
                    <solid android:color="@color/fab_color_accent"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>